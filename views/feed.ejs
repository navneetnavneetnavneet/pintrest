<% include ./partials/header.ejs %>

    <div class="cards w-full min-h-screen bg-zinc-700 px-10 py-5 text-white flex gap-12 flex-wrap">
        <% posts.forEach(function(elem){ %>
            <a href="/show/post/<%= elem._id %>">
                <div class="card w-40">
                    <div class="w-full h-60 rounded-lg bg-zinc-200 overflow-hidden">
                        <img class="w-full h-full object-cover" src="/images/uploads/<%= elem.image %>" alt="">
                    </div>
                    <h1 class="mt-3 text-sm font-semibold"><%= elem.title %></h1>
                    <h5 class="mt-3 text-xs opacity-60 font-semibold">@<%= elem.user.username %></h5>
                </div>
            </a>
        <% }) %>
    </div>

<% include ./partials/footer.ejs %>