<% include ./partials/header.ejs %>

    <div class="w-full min-h-screen bg-zinc-700 px-10 py-5 text-white">
        <div class="card w-96">
            <div class="w-full h-60 rounded-lg bg-zinc-200 overflow-hidden">
                <img class="w-full h-full object-cover" src="/images/uploads/<%= post.image %>" alt="">
            </div>
            <h1 class="mt-3 text-xl font-semibold">Title : <%= post.title %></h1>
            <h5 class="mt-3 text-sm font-semibold opacity-60">Discription : <%= post.discription %></h5>
            <div class="mt-5">
                <h1 class="font-semibold text-zinc-200 text-xl">User Details</h1>
                <hr class="opacity-60 mt-2 mb-5">
                <h1 class="font-semibold opacity-60 text-sm">Name : <%= post.user.name %></h1>
                <h1 class="font-semibold opacity-60 text-sm">username : @<%= post.user.username %></h1>
                <h1 class="font-semibold opacity-60 text-sm">email : <%= post.user.email %></h1>
                <h1 class="font-semibold opacity-60 text-sm">contact : <%= post.user.contact %></h1>
            </div>
        </div>
    </div>

<% include ./partials/footer.ejs %>