<% include ./partials/header.ejs %>

    <div class="w-full min-h-screen bg-zinc-700 text-white px-10 py-5">
        <h3 class="">Create a new post.</h3>
        <hr class="opacity-20 mt-3">
        <form action="/createpost" method="post" enctype="multipart/form-data">
            <input class="text-black block mt-2 px-2 py-2 w-1/4" type="file" placeholder="file" name="postimage">
            <input class="text-black block mt-2 px-2 py-2 border-2 w-1/4" type="text" placeholder="Title" name="title">
            <textarea class="text-black resize-none mt-2 px-2 py-2 border-2 w-1/4 h-40" type="text" placeholder="Discription" name="discription" ></textarea> 
            <input class="text-white block mt-2 px-2 py-2 w-1/4 bg-red-700 font-semibold" type="submit" value="Create Post">
        </form>
    </div>

