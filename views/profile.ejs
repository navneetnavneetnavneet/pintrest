<% include ./partials/header.ejs %>

  <div class="profile w-full min-h-screen bg-zinc-700 text-white py-1">
    <form hidden id="uploadform" action="/fileupload" enctype="multipart/form-data" method="post">
        <input type="file" name="image">
    </form>
    <div class="prodets flex flex-col items-center justify-center mt-20">
        <div class="relative">
            <span id="uploadicon" class="w-8 h-8 rounded-full absolute right-0 bottom-0 flex items-center justify-center bg-zinc-200">
                <i class="text-zinc-700 ri-pencil-fill"></i>
            </span>
            <div class="image w-32 h-32 bg-zinc-200 rounded-full overflow-hidden">
                <img class="w-full h-full object-cover" src="/images/uploads/<%= user.profileImage %>" alt="">
            </div>
        </div>
        <h1 class="text-2xl font-semibold mt-5"><%= user.name %></h1>
        <h3 class="text-xl font-semibold">@<%= user.username %></h3>
        <a href="/edit" class="px-5 py-2 mt-5 bg-zinc-500 font-semibold rounded-full">Edit</a>
        <a href="/add" class="px-10 py-2 rounded-lg bg-red-700 mt-5 font-semibold text-xs">Add New Post</a href="/add">
    </div>
    <div class="cards flex gap-10 flex-wrap px-5 mt-10">
        <div class="card">
            <div class="w-52 h-40 bg-zinc-100 rounded-lg overflow-hidden">
                <img class="w-full h-full object-cover" src="/images/uploads/<%= user.posts[0]?.image %>" alt="">
            </div>
            <a href="/show/post" class="text-xl font-semibold mt-3">Uploaded Pins</a>
            <h3 class="text-sm font-medium opacity-60"><%= user.posts.length %> Pins</h3>
        </div>
    </div>
  </div>

  <script>
    document.querySelector("#uploadicon")
    .addEventListener("click", function(){
        document.querySelector("#uploadform input").click();
    })

    document.querySelector("#uploadform input")
    .addEventListener("change", function(){
        document.querySelector("#uploadform").submit();
    })
  </script>

<% include ./partials/footer.ejs %>